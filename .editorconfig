charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = double
trailingComma = none

[*.scss]
indent_size = 2

[*.yml]
indent_size = 2

[*.json]
indent_size = 2

[Makefile]
indent_style = space
indent_size = 2